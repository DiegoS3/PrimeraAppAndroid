<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AcercaDeActivity"
        android:background="@color/colorAccent">

    <TextView
            android:text="@string/acercaDe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/aboutTextAbout"
            android:textAlignment="center" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/aboutImgPerfilAbout"/>
    <ImageView
            android:layout_width="223dp"
            android:layout_height="150dp"
            android:id="@+id/aboutImgPerfilAbout"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp" android:layout_marginEnd="49dp"
            app:layout_constraintEnd_toEndOf="parent" app:srcCompat="@mipmap/ic_foto_foreground"
            tools:srcCompat="@mipmap/ic_foto_foreground"/>
    <TextView
            android:text="@string/redes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/aboutTextRedes"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="157dp" android:layout_marginEnd="158dp"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/aboutTextAbout"/>
    <ImageButton
            android:layout_width="99dp"
            android:layout_height="61dp" app:srcCompat="@drawable/ic_twitter_5"
            android:background="@android:color/transparent" android:id="@+id/aboutIBtnTwitter"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="28dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/aboutTextRedes"/>
    <ImageButton
            android:layout_width="103dp"
            android:layout_height="74dp" app:srcCompat="@drawable/ic_github" android:id="@+id/aboutIBtnGit"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/aboutTextRedes" android:background="@android:color/transparent"/>
    <ImageButton
            android:layout_width="102dp"
            android:layout_height="74dp" app:srcCompat="@drawable/ic_afro" android:id="@+id/aboutIBtnPortfolio"
            android:background="@android:color/transparent" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/aboutTextRedes"
            app:layout_constraintEnd_toStartOf="@+id/aboutIBtnGit" android:layout_marginEnd="30dp"
            android:layout_marginStart="29dp" app:layout_constraintStart_toEndOf="@+id/aboutIBtnTwitter"/>
</androidx.constraintlayout.widget.ConstraintLayout>