<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddCitaActivity"
        android:background="@color/colorAccent">

    <EditText
            android:layout_width="233dp"
            android:layout_height="118dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/eventoEditTextDesc"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/eventoEditTextLocalizacion"
            android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="49dp" app:layout_constraintStart_toEndOf="@+id/eventoTextFechIDesc"
            app:layout_constraintHorizontal_bias="0.318"/>
    <EditText
            android:layout_width="235dp"
            android:layout_height="43dp"
            android:inputType="textShortMessage"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/eventoEditTextTitulo"
            android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="90dp" app:layout_constraintStart_toEndOf="@+id/eventoTextTituloEvento"
            app:layout_constraintHorizontal_bias="0.339" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/eventoTextTitulo"/>
    <EditText
            android:layout_width="235dp"
            android:layout_height="43dp"
            android:inputType="textShortMessage"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/eventoEditTextLocalizacion"
            android:layout_marginEnd="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/eventoEditTextTitulo"
            android:layout_marginStart="42dp" app:layout_constraintStart_toEndOf="@+id/eventoTextLocalizacion"
            app:layout_constraintHorizontal_bias="0.365"/>
    <TextView
            android:text="@string/eventoDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/eventoTextFechIDesc"
            android:textSize="16sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/eventoTextLocalizacion"/>
    <TextView
            android:text="@string/eventoTituloEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/eventoTextTituloEvento"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:textSize="16sp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="68dp"/>
    <TextView
            android:text="@string/eventoLugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/eventoTextLocalizacion"
            android:textSize="16sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/eventoTextTituloEvento"/>
    <Button
            android:text="@string/btnConfirmar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/eventoBtnConfirmar"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="112dp" android:layout_marginEnd="100dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="60dp"
            app:layout_constraintStart_toEndOf="@+id/eventoEditTextLocalizacion"/>
    <TextView
            android:text="@string/eventoTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/eventoTextTitulo"
            android:textSize="18sp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="14dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="150dp" android:layout_marginEnd="151dp"
            app:layout_constraintEnd_toEndOf="parent" android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.468"/>
</androidx.constraintlayout.widget.ConstraintLayout>